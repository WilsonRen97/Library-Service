<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Query" />

    <EditText
        android:id="@+id/data_id_for_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:hint="Data ID" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/search_for_data_Btn"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn2"
        android:text="Search" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/findAllUserBtn"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn3"
        android:text="Find All User" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/findAllBookBtn"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn4"
        android:text="Find All Book" />

    <TextView
        android:id="@+id/data_query_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="" />

</LinearLayout>